<!-- Views/Home/Payment.cshtml -->
@model List<ShoppingCart>

<h2>Payment</h2>

<table>
    <thead>
        <tr>
            <th>Clothing Item</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClothingItem.Name</td>
                <td>@item.Quantity</td>
                <td>@(item.Quantity * item.ClothingItem.Price)</td>
            </tr>
        }
    </tbody>
</table>

<p>Total: @Model.Sum(item => item.Quantity * item.ClothingItem.Price)</p>

<a asp-controller="Home" asp-action="ConfirmPayment">Confirm Payment</a>
