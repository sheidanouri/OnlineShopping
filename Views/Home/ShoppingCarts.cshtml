@model List<ShoppingCart>

<h2>Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Views/Home/ShoppingCarts.cshtml -->
        @foreach (var shoppingCart in Model)
        {
            <tr>
                <td>@shoppingCart.ClothingItem.Name</td>
                <td>@shoppingCart.Quantity</td>
                <td>$@shoppingCart.ClothingItem.Price</td>
                <td>$@(shoppingCart.ClothingItem.Price * shoppingCart.Quantity)</td>
                <td>
                    <form method="post" asp-action="RemoveFromCart" asp-route-id="@shoppingCart.Id">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
