@model UserSelectionViewModel

@{
    ViewData["Title"] = "Item List";
}

<div class="text-center">
    <h1 class="display-4">Select Products</h1>

    <form asp-action="Index" method="get">
        <div class="row mb-3">
            <div class="col-md-3">
                <label for="NameFilter">Name:</label>
                <input type="text" asp-for="NameFilter" class="form-control" />
            </div>

            <div class="col-md-3">
                <label for="SizeFilter">Size:</label>
                <input type="text" asp-for="SizeFilter" class="form-control" />
            </div>

            <div class="col-md-3">
                <label for="ColorFilter">Color:</label>
                <select asp-for="ColorFilter" asp-items="@(new SelectList(Model.Colors))" class="form-control">
                    <option value="">-- All Colors --</option>
                </select>
            </div>

            <!-- Other filter controls as needed... -->

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary mt-4">Apply Filters</button>
            </div>
        </div>
    </form>

    <div class="row">
        @foreach (var item in Model.ClothingItems)
        {
            <div class="col-md-3">
                <div class="card mb-3">
                    <img src="@item.ImageUrl" alt="@item.Name" class="card-img-top clothing-item-image" alt="Clothing Item">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">Size: @item.Size</p>
                        <p class="card-text">Color: @item.Color</p>
                        <p class="card-text">Price: $@item.Price</p>
                        <a href="@Url.Action("Detail", new { id = item.Id })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
